<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alejandro.cajerosceres.PerfilFragment">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/perfil"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="136dp"
            app:srcCompat="@drawable/imagen_home"
            android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:elevation="1dp" />

        <ImageView
            android:layout_width="67dp"
            android:layout_height="67dp"
            app:srcCompat="@drawable/imagen_home"
            android:id="@+id/imageView4"
            app:layout_constraintBottom_toTopOf="@+id/textViewPerfilNombre"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:elevation="2dp" />

        <TextView
            android:text="Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPerfilNombre"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textViewPerfilPassword"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:text="ContraseÃ±a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPerfilPassword"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/buttonModificarDatosPerfil"
            android:layout_marginBottom="32dp" />

        <Button
            android:text="Modificar datos"
            android:layout_width="365dp"
            android:layout_height="59dp"
            android:id="@+id/buttonModificarDatosPerfil"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/buttonFavoritosPerfil"
            android:layout_marginBottom="8dp"/>

        <Button
            android:text="Ver viajes guardados"
            android:layout_width="365dp"
            android:layout_height="59dp"
            android:id="@+id/buttonFavoritosPerfil"
            app:layout_constraintBottom_toTopOf="@+id/buttonBorrarPerfil"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"/>

        <Button
            android:text="Borrar perfil"
            android:layout_width="365dp"
            android:layout_height="59dp"
            android:id="@+id/buttonBorrarPerfil"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
